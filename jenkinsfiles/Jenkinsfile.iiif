elifePipeline {
    def commit
    stage 'Checkout', {
        checkout scm
        commit = elifeGitRevision()
    }

    stage 'Ci', {
        lock('iiif--ci') {
            builderDeployRevision 'iiif--ci', commit
        }
    }

    stage 'End2end', {
        lock('iiif--end2end') {
            builderDeployRevision 'iiif--end2end', commit
        }
    }

    stage 'Prod', {
        lock('iiif--prod') {
            builderDeployRevision 'iiif--prod', commit
        }
    }
}
